<div class="container">
    <div class="logo">
        <a itemprop="url" href="/" alt="DLS Website">
            <img src="/img/logo.svg" />
        </a>
    </div>
    <nav>
        <ul>
            {%- for post in collections.main_navigation -%}
              <li{% if page.url == post.url %} aria-current="page" class="active" {% endif %}>
                <a href="{{ post.url }}">{{ post.data.title }}</a>
                <span class="nav-indicator"></span>
              </li>
            {%- endfor -%}
        </ul>
    </nav>
    <!-- <div class="main-search">
    </div> -->
</div>